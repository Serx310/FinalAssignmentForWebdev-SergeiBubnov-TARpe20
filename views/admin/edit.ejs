<%-include('../partials/partialtime', {DocumentTitle:'Welcome, Mr. Administrator!'})%>
  <h1>Edit data</h1>

  <h2 id="#access">Access</h2>
  <a href="#personalInfo" class="btn btn-success text-uppercase px-3">Personal Info</a>
  <a href="#contact" class="btn btn-success text-uppercase px-3">Contact information</a>
  <a href="#education" class="btn btn-success text-uppercase px-3">Education</a>
  <a href="#skills" class="btn btn-success text-uppercase px-3">Skills</a>

  <h2 id="personalInfo">Personal information</h2>


  <h2 class="mt-3">Upload profile picture</h2>
  <div class="m-5">
    <form action="/UploadProfilePic" method="POST" enctype="multipart/form-data">
      <input type="hidden" name = "id" value="<%= personalInfo[0]._id %>">
      <input type="file" class="form-control-file" name="profilePicture">
      <button   type="submit">Upload</button>
    </form>
  </div>


  <% for(let i = 0; i<personalInfo.length; i++){ %>
  <form action="/updPersonalinfo"  method="POST">
    <input type="hidden" name = "id" value="<%= personalInfo[i]._id %>">
        <div class="form-group">
          <label>First Name</label>
          <input type="text" name="firstname" class="form-control"  value="<%=personalInfo[i].firstName%>">
        </div>
        <div class="form-group">
          <label>Last Name</label>
          <input type="text" name = "lastname" class="form-control"  value="<%=personalInfo[i].lastName%>">
        </div>
        <div class="form-group">
          <label>Country</label>
          <input type="text" name = "country" class="form-control"  value="<%=personalInfo[i].country%>">
        </div>
        <div class="form-group">
          <label>City</label>
          <input type="text" name = "city" class="form-control"  value="<%=personalInfo[i].city%>">
        </div>
        <div class="form-group">
          <label>Short Description</label>
          <input type="text" name = "descriptionShort" class="form-control"  value="<%= personalInfo[i].description %>">
        </div>
        <div class="form-group">
          <label>Date of birth</label>
          <input type="date" name = "dob" class="form-control" value="<%=personalInfo[i].dateOfBirth.toISOString().substring(0, 10) %>">
        </div>
      <button class="btn btn-primary m-3" type="submit" class="btn btn-primary">Save</button>
    </form>
    <% } %>

    <h2 id="contact">Contact information</h2>
    <a href="#top" class="btn btn-success text-uppercase px-3">Back to the top</a>

  <% for(let i = 0; i<contact.length ;i++){ %>

    <form action="/UpdateContactInfo" method="POST">
      <input type="hidden" name = "id" value="<%= contact[i]._id %>">
      <div class="form-group">
        <label >Phone number</label>
        <input type="text" name="phone" class="form-control" value="<%= contact[i].phone %>">
      </div>
      <div class="form-group">
        <label>Email</label>
        <input type="email" name = "email" class="form-control"  value="<%= contact[i].email %>">
      </div>
      <div class="form-group">
        <label>Address</label>
        <input type="text" name = "Address" class="form-control" value="<%= contact[i].address %>">
      </div>
      <button class="btn btn-primary m-3" type="submit" class="btn btn-primary">Save</button>
    </form> 
    <% } %>

  <h2 id="education">Education</h2>
  <a href="#top" class="btn btn-success text-uppercase px-3">Back to the top</a>
  <% for(let i = 0; i<educations.length ;i++){ %>

    <form action="/UpdateEducation" method="POST">
      <input type="hidden" name = "id" value="<%= educations[i]._id %>">
      <div class="form-group">
        <label >School name</label>
        <input type="text" name="schoolName" class="form-control" value="<%= educations[i].schoolName %>">
      </div>
      <div class="form-group">
        <label>Education type</label>
        <input type="text" name = "description" class="form-control"  value="<%= educations[i].educationType %>">
      </div>
      <div class="form-group">
        <label>Date of graduation</label>
        <input type="date" name = "graduated" class="form-control" value="<%= educations[i].graduated.toISOString().substring(0, 10) %>">
      </div>
      <button class="btn btn-primary m-3" type="submit" class="btn btn-primary">Save</button>
    </form> 

    <form action="/DeleteEducation" method="post">
      <input type="hidden" name = "id" value="<%= educations[i]._id %>">
      <button class="btn btn-danger" type="submit" class="btn btn-danger">Delete</button>
    </form>
    <% } %>

  <h2 id="skills">Skills</h2>
  <a href="#top" class="btn btn-success text-uppercase px-3">Back to the top</a>
  <% for(let i = 0; i<skills.length ;i++){ %>

    <form action="/UpdateSkills" method="POST">
      <input type="hidden" name = "id" value="<%= skills[i]._id %>">
      <div class="form-group">
        <label >Title</label>
        <input type="text" name="title" class="form-control" value="<%= skills[i].title %>">
      </div>
      
      <label>Skill type</label>
      <select name="skillType" class="form-select">
        <option selected><%= skills[i].type %> </option>
        <option value="Soft">Soft</option>
        <option value="Technical">Technical</option>
      </select>
      <button class="btn btn-primary m-3" type="submit" class="btn btn-primary">Save</button>
    </form>

    <form action="/DeleteSkill" method="post">
      <input type="hidden" name = "id" value="<%= skills[i]._id %>">
      <button class="btn btn-danger" type="submit" class="btn btn-danger">Delete</button>
    </form>

    <% } %>

    <a href="#top" class="btn btn-success text-uppercase px-3">Back to the top</a>
</div>

  <%-include('../partials/footer')%>